<%= simple_form_for [forem, :admin, @topic.forum, @topic], :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :subject, :class => "col-sm-2"%>
    <div class ="col-sm-10">
      <%= f.input :subject, :label => false, :input_html => {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :forum, :class => "col-sm-2"%>
    <div class ="col-sm-10">
      <%= f.association :forum, :include_blank => false, :label => false, :input_html => {:class => "form-control"} %>
    </div>
  </div>
  <div class="checkbox col-sm-10 col-sm-offset-2">
    <%= f.label :locked %>
    <%= f.check_box :locked %>
  </div>
  <div class="checkbox col-sm-10 col-sm-offset-2">
    <%= f.label :pinned %>
    <%= f.check_box :pinned %>
  </div>
  <div class="checkbox col-sm-10 col-sm-offset-2">
    <%= f.label :hidden %>
    <%= f.check_box :hidden %>
  </div>
<!--   <%= f.label :locked %>
  <%= f.check_box :locked %>
  <%= f.label :pinned %>
  <%= f.check_box :pinned %>
  <%= f.label :hidden %>
  <%= f.check_box :hidden %> -->

  <br />
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
