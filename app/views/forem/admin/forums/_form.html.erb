<%= simple_form_for [forem, :admin, @forum], :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :category, :class => "col-sm-2"%>
    <div class ="col-sm-10">
      <%= f.association :category, :include_blank => false, :label => false, :input_html => {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2"%>
    <div class ="col-sm-10">
      <%= f.input :title, :label => false, :input_html => {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2"%>
    <div class ="col-sm-10">
      <%= f.input :description, :as => :text, :label => false, :input_html => {:class => "form-control"} %>
    </div>
  </div>

  <h3><%= t('forem.admin.forum.moderator_groups') %></h3>
  <%= f.association :moderators, :as => :check_boxes %>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
