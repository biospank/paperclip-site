            <div class="col-sm-6">
                <%= image_tag "img/showcase1.png", class: 'img-responsive' %>
            </div>
            <div class="col-sm-6 info">
                <h3>
                    <i class="fa fa-windows fa-2x pull-left blue"></i>
                    Multi OS
